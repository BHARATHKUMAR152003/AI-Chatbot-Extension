{
  "manifest_version": 3,
  "name": "BChatAI with OpenRouter",
  "version": "1.1",
  "description": "ChatGPT extension using OpenRouter API",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://openrouter.ai/"
  ]
}